<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AccountSignIn</servlet-name>
        <servlet-class>controllers.AccountSignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountSignUp</servlet-name>
        <servlet-class>controllers.AccountSignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountProfile</servlet-name>
        <servlet-class>controllers.AccountProfile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductListControllers</servlet-name>
        <servlet-class>controllers.ProductListControllers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductManage_admin</servlet-name>
        <servlet-class>controllers.ProductManage_admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateProduct_admin</servlet-name>
        <servlet-class>controllers.CreateProduct_admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduct_admin</servlet-name>
        <servlet-class>controllers.DeleteProduct_admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProduct_admin</servlet-name>
        <servlet-class>controllers.EditProduct_admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>controllers.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountForgot</servlet-name>
        <servlet-class>controllers.ForgotPasswordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountSignIn</servlet-name>
        <url-pattern>/account/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountSignUp</servlet-name>
        <url-pattern>/account/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountProfile</servlet-name>
        <url-pattern>/account/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductListControllers</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductManage_admin</servlet-name>
        <url-pattern>/productManage_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProduct_admin</servlet-name>
        <url-pattern>/deleteProduct_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateProduct_admin</servlet-name>
        <url-pattern>/createProduct_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProduct_admin</servlet-name>
        <url-pattern>/editProduct_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountForgot</servlet-name>
        <url-pattern>/account/forgot</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>signin.jsp</welcome-file>
    </welcome-file-list>
</web-app>
